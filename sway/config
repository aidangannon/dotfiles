set $mod Mod4

set $term alacritty
set $menu fuzzel

output * bg ~/Downloads/Argentiere-12.jpg fill

font pango:UbuntuMono Nerd Font, Noto Color Emoji 11

default_border none
default_floating_border none

gaps inner 10
gaps outer 5

input type:keyboard {
    xkb_layout "gb"
}

mode "resize" {
    bindsym h resize shrink width 10px
    bindsym j resize grow height 10px
    bindsym k resize shrink height 10px
    bindsym l resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "tmux-like" {
    bindsym Shift+5 splitv; exec $term
    bindsym Shift+2 splith; exec $term

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+c reload

bindsym $mod+r mode "resize"

bindsym $mod+b mode "tmux-like"

bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+Shift+q kill
bindsym $mod+Shift+e exit

bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+k focus up
bindsym $mod+j focus down

bindsym $mod+1 workspace number 1; mode "default";
bindsym $mod+2 workspace number 2; mode "default";
bindsym $mod+3 workspace number 3; mode "default";
bindsym $mod+4 workspace number 4; mode "default";
bindsym $mod+5 workspace number 5; mode "default";

bindsym $mod+Shift+5 splith
bindsym $mod+Shift+2 splitv

bindsym $mod+Escape exec swaylock -f

bindsym XF86AudioRaiseVolume exec wpctl set-volume --limit 1.0 @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

exec wl-paste --watch cliphist store
bindsym $mod+v exec cliphist list | fuzzel --dmenu | cliphist decode | wl-copy

exec swayidle -w \
    timeout 300 'swaylock -f' \
    timeout 600 'swaymsg "output * power off"' \
    resume 'swaymsg "output * power on"' \
    before-sleep 'swaylock -f'

exec waybar
